<UserControl x:Class="WpfApp4.ImageUpload"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp4"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Canvas HorizontalAlignment="Left" Height="450" VerticalAlignment="Top" Width="800" Background="White">
            <Button x:Name="chooseImageButton" Content="Choose Image" Height="47" Canvas.Left="173" Canvas.Top="351" Width="190" Click="chooseImageButton_Click"/>
            <Image x:Name="ImageViewer" Height="300" Canvas.Left="252" Canvas.Top="10" Width="300"/>
            <Button x:Name="uploadButton" Content="Upload" Canvas.Left="438" Canvas.Top="351" Width="190" Height="47" IsEnabled="False" Click="uploadButton_Click"/>
            <TextBox x:Name="imageDescription" Height="31" Canvas.Left="252" TextWrapping="Wrap" Canvas.Top="315" Width="300"/>
            <Label x:Name="resultLabel" Content="" Canvas.Left="325" Canvas.Top="396" RenderTransformOrigin="1.297,0.053" Width="142"/>
        </Canvas>

    </Grid>
</UserControl>
